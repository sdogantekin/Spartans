    <div class="actionBar">
      <div class="action -left">cancel</div>
      <div class="action -right -primary" onclick="saveJob()">Create Position</div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">8</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Position title</p>
      </div>
      <div class="row">
        <p class="questionSub">JAVA Developer</p>
      </div>
