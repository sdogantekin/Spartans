<% include header %>
<script src="/javascripts/job.js"></script>
<body>

<div class="modal -wizard">

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">1</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Aradığınız aday hangi sektör / departman için</p>
      </div>
      <div class="row">
        <div class="formContainer">
          <input type="" id="inputDepartment" name="" placeholder="Category" class="w100">
          <ul class="pillContainer" id="jobDepartment">
            <li id="perakende" onclick="changeStatus('perakende')">Perakande</li>
            <li id="insaat" onclick="changeStatus('insaat')" >İnşaat</li>
            <li id="it" onclick="changeStatus('it')" class="active">IT</li>
            <li id="pazarlama" onclick="changeStatus('pazarlama')" >Pazarlama</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">1</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Aranan kişinin temel görev tanımı nedir?</p>
      </div>
      <div class="row">
        <div class="formContainer">
          <input type="" name="" id="inputCategory" placeholder="Category" class="w100">
          <ul class="pillContainer" id="jobCategory">
            <li id="systemAdmin" onclick="changeStatus('systemAdmin')">System Admin</li>
            <li id="dataScientist" onclick="changeStatus('dataScientist')">Data Scientist</li>
            <li id="developer" onclick="changeStatus('developer')" class="active">Developer</li>
            <li id="businessAnalist" onclick="changeStatus('businessAnalist')">Business Analist</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">2</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Hangi uzmanlıklara sahip olmalı?</p>
      </div>
      <div class="row">
        <div class="formContainer">
          <ul class="pillContainer" id="jobSkills">
            <li id="java" onclick="changeStatus('java')">JAVA</li>
            <li id="net" onclick="changeStatus('net')" class="active">.NET</li>
            <li id="cpp" onclick="changeStatus('cpp')">C++</li>
            <li id="javascript" onclick="changeStatus('javascript')">Javascript</li>
          </ul>
          <input type="" name="" id="inputSkills" placeholder="or else?" class="w100">
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">3</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">İstediğin yetkinlikler?</p>
      </div>
      <div class="row">
        <div class="formContainer">
          <input type="" name="" id="inputPerfection" placeholder="free area" class="w75">
          <button class="w25 -primaryButton" onclick="addPerfection()">Add</button>
          <ul class="bulletContainer" id="jobPerfection">
            <li id="perfection">İyi derecede ingilizce bilen</li>
            <li id="perfection">Dinamik, sonuç odaklı ve takipçi</li>
            <li id="perfection">Takım çalışmasına yatkın</li>
            <li id="perfection">Yoğun ve esnek iş temposunda uyum gösterebilecek</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">4</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Genel Nitelikler ( İşin tanımı ):</p>
      </div>
      <div class="row">
        <div class="formContainer">
          <input type="" name="" id="inputQualification" placeholder="free area" class="w75">
          <button class="w25 -primaryButton" onclick="addQualification()">Add</button>
          <ul class="bulletContainer" id="jobQualification">
            <li id="qualification">Yazılım proje yönetimi konusunda en az 3 yıl deneyimi olan</li>
            <li id="qualification">Proje yönetimi standart ve metodolojilerine hakim</li>
            <li id="qualification">Agile proje ekiplerinde yer almış</li>
            <li id="qualification">lletişim, analiz, raporlama ve sunum becerileri güçlü</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">5</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Location</p>
      </div>
      <div class="row">
        <div class="formContainer">
          <input type="" name="" id="inputLocation" placeholder="free area" class="w100">
          <ul class="pillContainer" id="jobLocation">
            <li id="istanbul" onclick="changeStatus('istanbul')" class="active">istanbul</li>
            <li id="ankara" onclick="changeStatus('ankara')" class="active">ankara</li>
            <li id="londra" onclick="changeStatus('londra')" class="active">londra</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="multistepContainer">
      <ul class="multistep">
        <li class="active">6</li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <p class="question">Lokasyona Özel Extra Bilgiler</p>
      </div>

      <div class="row">
        <p class="questionSub"> Maaş Aralığı </p>
      </div>
      <div class="row">
        <div class="formContainer" id="jobSalary">
          <input type="" id="minSalary" name="" placeholder="0" class="w25">
          <input type="" id="maxSalary" name="" placeholder="10000" class="w25">
        </div>
      </div>
      <div class="row">
        <p class="questionSub">Diğer </p>
      </div>
      <div class="row">
        <div class="formContainer">
          <input type="" name="" id="inputOther" placeholder="free area" class="w75">
          <button class="w25 -primaryButton" onclick="addOther()">Add</button>
          <ul class="bulletContainer" id="jobOther">
            <li>Askerlik Tamamlanmış Olmalı</li>
            <li>Adli Sicil Kaydı İsteniyor</li>
          </ul>
        </div>
      </div>
    </div>
